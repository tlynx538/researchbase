extends ../guideLayout 
block content 
    div(class="p-3 col")
        main(class="jumbotron jumbotron-fluid")
            h1(class="display-4") View Scholar(s)
            p(class="lead") This list of scholars shows the list of your scholars.
        hr     
        if(scholars_list.length)
          each item in scholars_list
            div(class="border border-primary")
              div(class="row p-2")
                div(class="col")
                    a(class="h5 text-decoration-none",href="/guides/profile/"+item.scholar_id) #{item.scholar_name}
                    p(class="h6 text-muted") #{item.scholar_usn}
                div(class="col")
                    h6(class="text-muted") Thesis Topic
                    h6 Example Topic 
                div(class="col-6")
                  h6 Current Task: Thesis Submission
                  div(class="progress")
                    div(class="progress-bar",role="progressbar",style="width: 25%",aria-valuenow="25",aria-valuemin="0",aria-valuemax="100")   
            br
          else
            p(class="lead") No scholars at the moment.             